{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "paths": {
      "@/*": ["src/*"]
    },
    "declaration": true,
    "allowJs": false,
    "noUnusedLocals": true,
    "composite": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}